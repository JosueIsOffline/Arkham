{
  "name": "arkham-dev/framework",
  "description": "A lightweight, modern PHP framework built from scratch with MVC architecture, database wizard, and powerful developer tools",
  "type": "project",
  "keywords": [
    "framework",
    "php",
    "mvc",
    "web",
    "arkham",
    "database",
    "twig",
    "routing",
    "orm",
    "query-builder"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "JosueIsOffline",
      "email": "josuehernandez2314@gmail.com",
      "homepage": "https://github.com/JosueIsOffline",
      "role": "Creator"
    },
    {
      "name": "Arkham Framework Team"
    }
  ],
  "support": {
    "issues": "https://github.com/JosueIsOffline/Arkham/issues",
    "docs": "https://josueisoffline.vercel.app/writing/guia-completa-de-arkham-framework-en-espanol#respuestas-http",
    "source": "https://github.com/JosueIsOffline/Arkham"
  },
  "require": {
    "php": ">=8.1",
    "nikic/fast-route": "^1.3",
    "twig/twig": "^3.21",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2"
  },
  "autoload": {
    "psr-4": {
      "JosueIsOffline\\Framework\\": "src/",
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "analyse": "phpstan analyse src app",
    "psalm": "psalm",
    "cs:check": "phpcs",
    "cs:fix": "phpcbf",
    "quality": [
      "@cs:check",
      "@analyse",
      "@psalm",
      "@test"
    ],
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\"",
      "@php -r \"echo 'Arkham Framework installed successfully!\\n';\"",
      "@php -r \"echo 'Visit http://localhost:8000 to start the database setup wizard.\\n';\""
    ],
    "serve": "php -S localhost:8000 -t public"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
